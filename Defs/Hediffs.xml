<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>SwarmingInfection</defName>
    <label>Swarming infection</label>
    <description>A swarm of small insects are infesting the part of body, producing a strong aphrodisiac as they breed.</description>
    <hediffClass>CrocamedelianInsects.Hediff_SwarmingInfection</hediffClass>
    <tendable>true</tendable>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>0.05</severityPerDay>
      </li>
    </comps>

    <stages>
      <li>
        <label>Minor</label>
        <minSeverity>0.0</minSeverity>
          <capMods>
            <li>
              <capacity>BloodPumping</capacity>
              <offset>0.05</offset>
            </li>
            <li>
              <capacity>BloodFiltration</capacity>
              <offset>0.05</offset>
            </li>
			      <li>
              <capacity>Metabolism</capacity>
              <offset>-0.05</offset>
            </li>
				</capMods>
      </li>
      <li>
        <label>Moderate</label>
        <minSeverity>0.34</minSeverity>
        <capMods>
            <li>
              <capacity>BloodPumping</capacity>
              <offset>0.07</offset>
            </li>
            <li>
              <capacity>BloodFiltration</capacity>
              <offset>0.07</offset>
            </li>
			      <li>
              <capacity>Metabolism</capacity>
              <offset>-0.07</offset>
            </li>
				</capMods>
      </li>
      <li>
        <label>Severe</label>
        <minSeverity>0.85</minSeverity>
        <capMods>
            <li>
              <capacity>BloodPumping</capacity>
              <offset>0.1</offset>
            </li>
            <li>
              <capacity>BloodFiltration</capacity>
              <offset>0.1</offset>
            </li>
			      <li>
              <capacity>Metabolism</capacity>
              <offset>-0.1</offset>
            </li>
				</capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>